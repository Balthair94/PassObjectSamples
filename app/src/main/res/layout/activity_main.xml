<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:padding="16dp">

    <EditText
            android:id="@+id/edit_text_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Person name"
            android:inputType="textCapWords"
            android:paddingBottom="16dp"/>

    <EditText
            android:id="@+id/edit_text_person_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:paddingBottom="16dp"
            android:hint="Person Age"/>

    <EditText
            android:id="@+id/edit_text_job_title"
            android:inputType="textCapSentences"
            android:layout_width="match_parent"
            android:hint="Job title"
            android:paddingBottom="16dp"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/edit_text_job_salary"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:hint="Job salary"
            android:paddingBottom="16dp"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/button_show_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open dialog"/>
</LinearLayout>